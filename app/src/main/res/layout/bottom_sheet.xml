<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@drawable/dialod_top"
            android:gravity="center">

            <TextView
                android:id="@+id/deYear"
                android:layout_marginEnd="2.5dp"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:gravity="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/deName"
                android:layout_marginStart="2.5dp"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintTop_toBottomOf="@id/main">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backWeakGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:text="휴대전화"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dePhoneNum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backWeakGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:text="이메일"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/deEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:linksClickable="true"
                android:textColorLink="@color/blue_800"
                android:autoLink="email"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backWeakGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:text="직장"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/deCompany"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backWeakGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:text="근무처 전화"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/deComNum"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backWeakGray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:paddingStart="10dp"
                android:paddingTop="8dp"
                android:text="직장 주소"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/deComAdr"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingBottom="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <FrameLayout
            android:layout_width="64dp"
            android:layout_height="42dp">

            <ImageButton
                android:id="@+id/img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/faver_btn1"
                android:src="@drawable/ic_favorite_border_red" />

            <ImageButton
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/faver_btn1"
                android:src="@drawable/faver_btn"
                android:visibility="gone" />
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/request"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@color/master2"
            android:text="전화걸기"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>