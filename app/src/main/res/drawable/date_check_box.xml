<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <layer-list>
            <!-- 배경 -->

            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_u_arrow" android:gravity="center" />
        </layer-list>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <layer-list>
            <!-- 배경 -->

            <!-- 이미지 영역 -->
            <item android:drawable="@drawable/ic_d_arrow" />
        </layer-list>
    </item>
</selector>